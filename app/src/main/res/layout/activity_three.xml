<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="TALLY COUNTER / SIMLE COUNTER"
        android:fontFamily="serif-monospace"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="5sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:hint="Input Number To Countdown"
        android:fontFamily="serif-monospace"
        android:textSize="15sp"
        android:inputType="number"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="5sp"
        android:id="@+id/edit_text"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:elevation="1sp"
        tools:targetApi="lollipop">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="start countdown"
            android:background="?selectableItemBackground"
            android:id="@+id/countdown"/>

    </android.support.v7.widget.CardView>

    <com.robillo.generalcounterlibrary.GeneralCounter
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/general_counter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:paddingStart="40sp"
        android:paddingEnd="40sp"
        app:background_color="#880E4F"
        app:highlight_color="#FF8A80"
        app:text_color="#F0F4C3"
        app:text_size="35"/>

</LinearLayout>
